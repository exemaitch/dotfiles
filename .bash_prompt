# when in a source directory that is a git repo, display git status
source ~/.git-prompt.sh

export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export set GIT_PS1_SHOWUPSTREAM="auto"
export GIT_PS1_SHOWCOLORHINTS=1

# inspired by https://github.com/mathiasbynens/dotfiles/blob/master/.bash_prompt
bold='';
reset="\e[0m";
black="\e[1;30m";
blue="\e[1;34m";
cyan="\e[1;36m";
green="\e[1;32m";
orange="\e[1;33m";
purple="\e[1;35m";
red="\e[1;31m";
violet="\e[1;35m";
white="\e[1;37m";
yellow="\e[1;33m";


	
PS1="\[${cyan}\]\u@\h \e[1;33m\w\[${bold}\] \[${blue}\]\$(__git_ps1  '(%s)' )\$ \[${reset}\] "
export PS1

PS2="\[${yellow}\]â†’ \[${reset}\]";
export PS2;
