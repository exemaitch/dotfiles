# Git Aliases
alias gs="git status"

function reb(){
	if [ -z "$1" ]; then
		echo "You must define a branch to rebase"
	else
		echo 'Checking out master'
		git checkout master
		echo 'Pulling'
		git pull
		echo "Checking out branch $1"
		git checkout $1
		echo 'Squash some commits'
		hash=`git merge-base $1 master`
		git rebase -i $hash
		echo 'Rebasing on top of master:  git rebase master'
		git rebase master
		echo 'Pushing to origin without -f'
		git push origin $1
		echo "Run:  git push origin $1 -f"
	fi	


} 

function agg(){
    if [ -z "$1" ]; then
        echo "You must specify a search term"
    else
        ag --hidden -f -Q -l -g $1 $2
    fi
}

function agv(){
    if [ -z "$1" ]; then
        echo "You must specify a search term"
    else
        agg $1 $VETTERY_HOME
    fi
}

function ags(){
    if [ -z "$1" ]; then
        echo "You must specify a search term"
    else
        agg $1 $SOURCE
    fi
}
        
