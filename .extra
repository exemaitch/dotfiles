function gmm(){
    branch=`git rev-parse --abbrev-ref HEAD` 
    if [ "$branch" == "master" ]; then 
        echo "You can't do this on master"
    else
        echo "Fetching master"
        git fetch origin master
        echo "Merging master over this branch"
        git merge master
    fi
}
